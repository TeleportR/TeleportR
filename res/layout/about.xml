<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	
	<ImageView android:id="@+id/andlabs"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/logo_andlabs"
	/>
	<ImageView android:id="@+id/subphisticated"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/logo_subphisticated"
	/>
	
	<ImageView android:id="@+id/logo"
		android:layout_below="@id/andlabs"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:src="@drawable/logo"
	/>
	<TextView android:id="@+id/about"
		android:textStyle="bold"
		android:textSize="16dip"
		android:gravity="center"
		android:text="@string/about"
		android:layout_below="@id/logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
	/>

	<ImageView android:id="@+id/openstreetmap"
		android:layout_width="84dip"
		android:layout_height="84dip"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:src="@drawable/logo_openstreetmap2"
	/>
	<ImageView android:id="@+id/creativecommons"
		android:layout_height="84dip"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@id/openstreetmap"
		android:src="@drawable/logo_creativecommons"
	/>
	<TextView 
		android:layout_above="@id/openstreetmap"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/osm_attribution"
	/>
		
</RelativeLayout>