<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/orig_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
				android:layout_marginTop="2dip"
				android:layout_marginLeft="2dip"
				android:text="@string/dep_label"
				android:textSize="11dip"
				/>
    <TextView android:id="@+id/orig"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/orig_label"
				android:textColorHighlight="#FFFFFFFF"
			    android:layout_alignParentLeft="true"
		    	android:paddingLeft="3dip"
		    	android:paddingRight="3dip"
			    android:ellipsize="end"
			    android:text="[start]"
			    android:textStyle="bold"
			    android:textSize="23dip"
			    android:singleLine="true"
			    android:maxWidth="135dip"
	></TextView> 
    <TextView android:id="@+id/dest"
			    android:maxWidth="155dip"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/orig_label"
			    android:layout_alignParentRight="true"
		    	android:paddingLeft="3dip"
		    	android:paddingRight="3dip"
			    android:singleLine="true"
			    android:textSize="23dip"
			    android:textStyle="bold"
			    android:ellipsize="start"
			    android:gravity="right"
			    android:text="[destination]"
	></TextView>  
	<ImageView android:id="@+id/arrow"
	           android:layout_width="58dip"
	           android:layout_height="58dip"
			   android:layout_toRightOf="@id/orig"
			   android:layout_toLeftOf="@id/dest"
			   android:layout_marginLeft="-23dip"
			   android:layout_marginRight="-23dip"
			   android:layout_alignParentTop="true"
         	   android:src="@drawable/arrow1"
    />
    <TextView
				android:id="@+id/dest_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_alignLeft="@id/dest"
				android:layout_marginTop="2dip"
				android:layout_marginLeft="2dip"
				android:text="@string/arr_label"
				android:textSize="11dip"
	/>
    
	<ListView  
		android:id="@android:id/list"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_below="@id/orig"
		android:layout_marginTop="7dip"
	    android:drawSelectorOnTop="true"
	    android:divider="#000000"
	    android:dividerHeight="2dip"
	    android:listSelector="@drawable/selector"
	    android:visibility="gone"
    />
    <ImageView android:id="@+id/logo"
        android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/logo"
    />
    
    <SlidingDrawer android:id="@+id/priorities"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="horizontal"
     android:handle="@+id/handle"
     android:content="@+id/pane"
     >

     <ImageView android:id="@id/handle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="333dip"
         android:src="@drawable/handle"
         />

     <LinearLayout android:id="@id/pane"
		    android:paddingTop="9dip"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#CC000000"
		    >
		    
		    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:paddingLeft="105dip"
			    android:text="@string/fun"
			    android:textStyle="bold"
			    android:textSize="23dip"
			  ></TextView>  
		    <SeekBar android:id="@+id/fun"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:thumb="@drawable/fun"
		    	android:paddingRight="23dip"
		    	android:paddingLeft="80dip"
		    	android:paddingBottom="23dip"
					android:progress="0"
			    android:max="5"
			    android:tag="fun"
		    ></SeekBar>
		    
		    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:paddingLeft="105dip"
			    android:text="@string/eco"
			    android:textStyle="bold"
			    android:textSize="23dip"
			  ></TextView>  
		    <SeekBar android:id="@+id/eco"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:thumb="@drawable/eco"
		    	android:paddingLeft="80dip"
		    	android:paddingBottom="23dip"
		    	android:paddingRight="23dip"
					android:progress="0"
			    android:max="5"
			    android:tag="eco"
		    ></SeekBar>
		    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:paddingLeft="105dip"
			    android:text="@string/fast"
			    android:textStyle="bold"
			    android:textSize="23dip"
			  ></TextView>  
		    <SeekBar android:id="@+id/fast"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:thumb="@drawable/fast"
		    	android:paddingLeft="80dip"
		    	android:paddingBottom="23dip"
		    	android:paddingRight="23dip"
					android:progress="0"
			    android:max="5"
			    android:tag="fast"
		    ></SeekBar>
		    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:paddingLeft="105dip"
			    android:text="@string/green"
			    android:textStyle="bold"
			    android:textSize="23dip"
			  ></TextView>  
		    <SeekBar android:id="@+id/green"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:thumb="@drawable/green"
		    	android:paddingLeft="80dip"
		    	android:paddingBottom="23dip"
		    	android:paddingRight="23dip"
					android:progress="0"
			    android:max="5"
			    android:tag="green"
		    ></SeekBar>
		    <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		    	android:paddingLeft="105dip"
			    android:text="@string/social"
			    android:textStyle="bold"
			    android:textSize="23dip"
			  ></TextView>  
		    <SeekBar android:id="@+id/social"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:thumb="@drawable/social"
		    	android:paddingLeft="80dip"
		    	android:paddingBottom="23dip"
		    	android:paddingRight="23dip"
					android:progress="0"
			    android:max="5"
			    android:tag="social"
		    ></SeekBar>

			</LinearLayout>


 </SlidingDrawer>
</RelativeLayout>
