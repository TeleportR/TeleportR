<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#000000"
android:padding="10dp"
>

<ImageView
android:id="@+id/logo"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:layout_height="200dp"
android:layout_width="200dp"
android:src="@drawable/logo"
/>

<ImageView
android:id="@+id/icon"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_height="90dp"
android:layout_width="90dp"
android:background="#A7A7A7"
android:padding="2dp"
android:src="@drawable/icon"
/>

<EditText
android:id="@+id/name"
android:textStyle="bold"
android:layout_toRightOf="@id/icon"
android:layout_alignParentRight="true"
android:layout_width="wrap_content"
android:layout_height="90dp"
android:layout_marginLeft="10dip"
android:textSize="33dip"
android:hint="name"
android:background="@drawable/textfield"
android:imeOptions="actionDone"
/>

<EditText android:id="@+id/nmb"
android:layout_below="@id/name"
android:layout_height="90dp"
android:layout_width="90dp"
android:layout_alignParentRight="true"
android:layout_marginTop="10dip"
android:imeOptions="actionDone"
android:inputType="phone"
android:textStyle="bold"
android:textSize="33dip"
android:hint="42"
android:background="@drawable/textfield"

/>

<EditText
android:id="@+id/street"
android:textStyle="bold"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_marginRight="10dip"
android:layout_alignTop="@id/nmb"
android:layout_toLeftOf="@id/nmb"
android:textSize="21dip"
android:hint="street"
android:background="@drawable/textfield"
android:imeOptions="actionDone"

/>

<EditText android:id="@+id/city"
android:layout_below="@id/street"
android:layout_alignParentLeft="true"
android:layout_marginRight="10dip"
android:layout_marginTop="10dip"
android:layout_toLeftOf="@id/nmb"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:textSize="19dip"
android:hint="city"
android:background="@drawable/textfield"
android:imeOptions="actionDone"

/>

<TextView
android:id="@+id/latlon"
android:textStyle="bold"
android:layout_below="@id/city"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="latitude, longitude"
android:textSize="14dip"
android:visibility="invisible"
>
</TextView>





<ImageButton
android:id="@+id/ok"
style="@android:style/Widget.Button.Inset"
android:padding="23dip"
android:paddingBottom="42dip"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_menu_mark"
android:visibility="invisible"

></ImageButton>
<TextView
android:id="@+id/ok_label"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_marginBottom="9dip"
android:textSize="15dip"
android:textStyle="bold"
android:textColor="#999"
android:text="Ok"
android:visibility="invisible"

>
</TextView>

</RelativeLayout>
