<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>
<TextView
android:id="@+id/name_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_marginTop="3px"
android:layout_marginLeft="3px"
android:text="Name:"
android:textSize="7dip"
>
</TextView>
<TextView
android:id="@+id/name"
android:textStyle="bold"
android:layout_below="@id/name_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="name"
android:textSize="23dip"
>
</TextView>


<ImageView
android:id="@+id/icon"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
android:paddingTop="12dip"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/icon"
>
</ImageView>

<TextView
android:id="@+id/street_label"
android:layout_below="@id/icon"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="3px"
android:layout_marginLeft="3px"
android:textSize="8sp"
android:text="Address:"
>
</TextView>
<TextView
android:id="@+id/street"
android:textStyle="bold"
android:layout_below="@id/street_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="streetname"
android:textSize="19dip"
>
</TextView>

<TextView
android:id="@+id/city_label"
android:layout_below="@id/street"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="3px"
android:layout_marginLeft="3px"
android:textSize="8sp"
android:text="City:"
/>
<TextView android:id="@+id/city"
android:layout_below="@id/city_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:textSize="19dip"
/>

<TextView
android:id="@+id/nmb_label"
android:layout_alignBottom="@id/street_label"
android:layout_toRightOf="@id/street"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="8sp"
android:text="Nr.:"
/>

<TextView android:id="@+id/nmb"
android:layout_toRightOf="@id/street"
android:layout_above="@id/city"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="14dip"
android:textStyle="bold"
android:textSize="42dip"
android:text="\?\?"
/>

<EditText android:id="@+id/nmb_edit"
android:layout_toRightOf="@id/street"
android:layout_above="@id/city"
android:layout_marginLeft="12dip"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:imeOptions="actionDone"
android:inputType="phone"
android:textStyle="bold"
android:textSize="42dip"
android:hint="nmb"
android:visibility="gone"
/>

<TextView
android:id="@+id/latlon_label"
android:layout_below="@id/city"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="3px"
android:layout_marginLeft="3px"
android:textSize="8sp"
android:text="LatLon:"
/>
<TextView
android:id="@+id/latlon"
android:textStyle="bold"
android:layout_below="@id/latlon_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="latitude, longitude"
android:textSize="14dip"
>
</TextView>




<ImageButton
android:id="@+id/ok"
style="@android:style/Widget.Button.Inset"
android:padding="23dip"
android:paddingBottom="42dip"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/ic_menu_mark"
></ImageButton>
<TextView
android:id="@+id/ok_label"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_marginBottom="9dip"
android:textSize="15dip"
android:textStyle="bold"
android:textColor="#999"
android:text="Ok"
>
</TextView>

</RelativeLayout>
